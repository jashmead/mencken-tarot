<h1>Listing positions</h1>

<table>
  <thead>
    <tr>
      <th>Position order</th>
      <th>Position x</th>
      <th>Position y</th>
      <th>Meaning normal</th>
      <th>Meaning reversed</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.position_order %></td>
        <td><%= position.position_x %></td>
        <td><%= position.position_y %></td>
        <td><%= position.meaning_normal %></td>
        <td><%= position.meaning_reversed %></td>
        <td><%= link_to 'Show', position %></td>
        <td><%= link_to 'Edit', edit_position_path(position) %></td>
        <td><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

