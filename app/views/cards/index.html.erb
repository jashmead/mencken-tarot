<h1>Listing cards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Major arcana</th>
      <th>Suit</th>
      <th>Description</th>
      <th>Tags plus</th>
      <th>Tags minus</th>
      <th>Text forward</th>
      <th>Text reversed</th>
      <th>Deck</th>
      <th>Card image upright</th>
      <th>Card image reversed</th>
      <th>Card thumbnail</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.name %></td>
        <td><%= card.major_arcana %></td>
        <td><%= card.suit %></td>
        <td><%= card.description %></td>
        <td><%= card.tags_plus %></td>
        <td><%= card.tags_minus %></td>
        <td><%= card.text_forward %></td>
        <td><%= card.text_reversed %></td>
        <td><%= card.deck_id %></td>
        <td><%= card.card_image_upright %></td>
        <td><%= card.card_image_reversed %></td>
        <td><%= card.card_thumbnail %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

